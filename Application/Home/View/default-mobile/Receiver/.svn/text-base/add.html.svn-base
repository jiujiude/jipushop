<extend name="Base/common"/>
<block name="header">
{:hook('mobileTopNav',array('title'=>$meta_title))}
</block>

<block name="body">
<div class="receiver-add">
  <form action="{:U(update)}" method="post">
    <div class="control-group">
      <input type="text" name="name" id="name" value="" placeholder="收货人姓名" maxlength="20">
    </div>
    <div class="control-group" id="Z_area_category">
    </div>
    <div class="control-group">
      <input type="text" name="address" id="address" value="" placeholder="详细地址" maxlength="100">
    </div>
    <div class="control-group">
      <input type="tel" name="mobile" id="mobile" value="" maxlength="11" placeholder="手机">
    </div>
    <div class="control-group">
      <input type="tel" name="phone" id="phone" value="" placeholder="电话">
    </div>
    <div class="control-group">
      <input type="tel" name="zipcode" id="zipcode" class="last" value="" maxlength="6" placeholder="邮编">
    </div>
    <div class="control-group checkbox">
      <div class="pull-left toggle Z_is_default_ck active" data-for="is_default">
        <div class="toggle-handle"></div>
      </div>
      是否设为常用地址
    </div>
    <div class="control-action">
      <input type="hidden" name="is_default" value="1">
      <button type="submit" class="btn btn-block btn-positive">保存</button>
    </div>
  </form>
</div>
</block>
<block name="script">
  <script>
    seajs.use('receiver', function(receiver){
      receiver.areaType({
        obj: '#Z_area_category'
      });
    });
  </script>
</block>
