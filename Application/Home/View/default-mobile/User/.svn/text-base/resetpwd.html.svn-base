<extend name="Base/common" />

<block name="body">
  <form action="{:U('User/doResetpwd')}" method="post" id="Z_forget_form" data-showwaitmsg="1">
    <div class="control-group">
      <input type="password" name="password" value="" id="inputPassword"  placeholder="请输入新密码"  errormsg="密码为6-20位" nullmsg="请输入新密码" datatype="*6-20">
    </div>
    <div class="control-group">
      <input type="password" name="repassword" value="" id="inputPassword" class="last" placeholder="请再次输入新密码" recheck="password" errormsg="您两次输入的密码不一致" nullmsg="请再次输入密码" datatype="*">
    </div>
    <div class="control-action">
      <button type="submit" class="btn btn-positive btn-block">提交</button>
    </div>
    <input type="hidden" name="rand_code" value="{$rand_code}">
  </form>
</block>
