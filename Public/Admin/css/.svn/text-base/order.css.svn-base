.order-table {
  margin-top: 8px;
  border-collapse: collapse;
  width: 100%;
}
.order-table th,.order-table td {
  border: 1px solid #e6e6e6;
  padding: 5px 10px;
  font-size: 12px;
}
.order-table th {
  text-align: left;
  font-weight: normal;
  line-height: 30px;
  padding: 2px 10px;
  background: #f5f5f5;
}
.order-table td {
  background: #fff;
  padding:5px 6px;
}
.order-table td input {
  border-color: #ddd;
  font-size: 13px;
  height: 16px;
}
.order-table td input:focus {
  border-color: #bbc3d6;
  border-radius: 3px 0 0 3px;
  color:#5e8d45;
}
.order-table .item-lists {
  padding-bottom: 3px;
}
.order-table .item-lists a {
  margin:0 3px 3px 0;
  display: inline-block;
  opacity: 0.7;
}
.order-table .item-lists img {
  width: 36px;
  padding: 1px;
  background: #fff;
 border: 1px solid #e8e8e8;
}
.order-table .item-lists a:hover {
  opacity: 1;
}
.order-table .item-lists a:hover img {
  border-color: #ddd;
}
.order-table .split-tab {
  padding: 4px 5px;
}
.list-empty {
  padding: 10px;
  color: #aaa;
 text-align: center;
}
.order-table:hover th,
.order-table:hover td {
  border-color: #c8cec5;
}
.order-table:hover th {
  background: #f6fff1;
}
.order-table.status-0 {
  opacity: 0.6;
}
.order-table.status-0 th:first-child,
.order-table.status-0 td:first-child {
  border-left-color: #f86f5a;
}
.order-table.status-0 th,
.order-table.status-0 td {
  background: #fff8f7;
}
.order-table.status-1 th:first-child,
.order-table.status-1 td:first-child {
  border-left-color: #49c054;
}
.order-table-head {
  border: 0;
  width: 100%;
  background: #555;
  line-height: 40px;
  font-size: 12px;
  margin-top: 15px;
  color: #fff;
}
.order-table-head a {
  color: #cde0c2;
}
.is-pai-order {
  position: relative;
}
.is-pai-order:before {
  position: absolute;
  left: 0;
  top: 0;
  width: 9px;
  height: 9px;
  content: " ";
  display: block;
  background: url(../images/is-pai.png) no-repeat;
}