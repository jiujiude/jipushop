.nav-invite {
  float: right;
  line-height: 44px;

  .icon {
    color: $negative-color;
  }
}

.item-title {

  > a {
    padding-left: 5px;
    border-left: 2px solid $negative-color;

    > .more {
      padding: 0 10px;
      border-radius: 24px;
      background-color: #ff5500;
      color: #FFF;
    }
  }
}

.index-category {
  border-bottom: none;
  border-top: $border-default;

  > .flex-box {
    margin-bottom: 0 !important;
    border-bottom: $border-default;

    &:last-child {
      border-bottom: none;
    }

    > li {
      padding: 15px 0;
      border-right: $border-default;

      &:active,
      &:focus {
        background-color: #f2f2f2;
      }
    }
  }
}

