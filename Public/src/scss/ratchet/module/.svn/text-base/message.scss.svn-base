.message-list {
  margin-bottom: -1px;
  
  > dl {
    border-bottom: 1px solid #eee;
    overflow: hidden;
    line-height: 30px;
    padding: 5px 10px;
    
    > dt {
      float: left;
      
      > .read-dot {
        background: #eee;
        width: 6px;
        height: 6px;
        border-radius: 10px;
        display: inline-block;
        margin-right: 3px;
        margin-bottom: 2px;
        
        &.active {
          background: #ff5702;
        }
      }
      
      > a {
        display: inline-block;
      }
      
    }
    
    > dd {
      float: right;
      font-size: 12px;
    }
  }
}

.message-modal-content {
  padding: 15px 10px;
  position: relative;
  > a {
    position: absolute;
    top: 35px;
    right: 12px;
    
    > .icon {
      font-size: 18px;
    }
  }
  > h3 {
    font-size:  16px;
  }
  
  > p {
    margin-top: 6px;
    font-size: 12px;
    color: #999;
  }
  
  > div {
    border-top: 1px dotted #eee;
    margin-top: 5px;
    padding-top: 8px;
    line-height: 22px;
  }
}