/**
 * 提现模块
 */

.withdraw {

  > .step {
    padding: 10px 0 20px;

    > ul {

      > li {
        position: relative;
        float: left;
        width: 33.333333%;
        text-align: center;

        &:not(:last-child) {

          &:after {
            position: absolute;
            top: 16px;
            left: 50%;
            width: 100%;
            height: 2px;
            background-color: #ccc;
            content: '';
          }
        }

        > .icon {
          position: relative;
          z-index: 10;
          background-color: #fff;
          font-size: 24px;
          color: #ccc;
        }

        > .time {
          font-size: 12px;
        }

        &.active {

          &:after {
            background-color: $brand-positive;
          }

          > .icon {
            color: $brand-positive;
          }
        }


      }
    }
  }
}