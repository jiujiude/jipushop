/*商品列表*/
.item-list {
  border-bottom: 1px solid $border-color;

  > .item {
    float: left;
    width: 20%;
    height: 320px;
    border: none;

    > .thumbnail {
      padding: 10px;
      height: 321px;
      border-right: none;

      .pic {
        @include transition(.2s linear);
      }

      &:hover {

        .pic {
          @include translate(-5px, 0);
          @include opacity(0.9);
        }
      }

      &.last {
        border-right: 1px solid $border-color;
      }
    }


    .caption {

      .thumbnail-label {
        overflow: hidden;
        text-overflow: ellipsis;
        -o-text-overflow: ellipsis;
        -webkit-text-overflow: ellipsis;
        -moz-text-overflow: ellipsis;
        white-space: nowrap;
      }

      .thumbnail-info {
        margin-bottom: 0;
        line-height: 30px;

        .text-danger {
          font-size: 24px;
        }

        .text-info {

          > .icon {
            vertical-align: 1px;
          }
        }
      }
    }
  }

  .item-2x {
    width: 40%;

    > .thumbnail {
      padding: 0;
      height: 320px;
      border-bottom: none;

      .pic {
        padding: 10px;
      }

      > a,
      > .caption {
        float: left;
        padding: 8% 0;
        width: 50%;
      }

      > .caption {
        padding: 10% 10px;

        .summary {
          margin-top: 20px;
          line-height: 1.8
        }
      }
    }
  }
}

.nav-category-list {
  height: 400px;
}

/*首页焦点图*/
.home-slider {
  height: 400px;

  > .item {

    > li {

      > a {
        height: 400px;
      }
    }
  }
}